<html lang='pt-BR'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>{{title}}</title>
  </head>

  <body style='margin:0;font-family:arial'>
    <table style='border:0;width:100%'>
      <tr style='background:#eeeeee'>
        <td
          style='padding:20px;color:#808080;text-align:center;font-size:40px;font-weight:600'
        >
          {{app_name}}
        </td>
      </tr>
      <tr>
        <td style='padding:20px;color:#808080;font-size:16px;font-weight:100'>
          {{text1}}<br />
          {{text2}}<br />
          {{text3}}
        </td>
      </tr>
      <tr>
        <td
          style='padding:20px;color:#808080;font-size:16px;font-weight:100;background:#f5f5f5;border-left:4px solid #00838f'
        >
          <strong>{{text4}}</strong><br />
          <span
            style='font-size:18px;color:#00838f;font-weight:bold'
          >{{temporaryPassword}}</span>
        </td>
      </tr>
      <tr>
        <td style='padding:20px;color:#808080;font-size:16px;font-weight:100'>
          {{text5}}
        </td>
      </tr>
      <tr>
        <td style='text-align:center'>
          <a
            href='{{url}}'
            style='display:inline-block;padding:20px;background:#00838f;text-decoration:none;color:#ffffff'
          >{{actionTitle}}</a>
        </td>
      </tr>
      <tr>
        <td style='padding:20px;color:#808080;font-size:16px;font-weight:100'>
          {{text6}}
        </td>
      </tr>
    </table>
  </body>

</html>
